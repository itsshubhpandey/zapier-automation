{
  "name": "zapier-automation",
  "version": "0.1.0",
  "description": "DFINITY Internet Computer project for Zapier-like automation.",
  "keywords": [
    "Internet Computer",
    "Motoko",
    "Rust",
    "React",
    "Bootstrap",
    "Web3"
  ],
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "dfx start --background && dfx deploy",
    "stop": "dfx stop",
    "deploy": "dfx deploy",
    "deploy:frontend": "dfx deploy zapier-automation-frontend",
    "deploy:backend": "dfx deploy zapier-automation-backend",
    "generate": "dfx generate",
    "build:frontend": "npm run build --workspace zapier-automation-frontend",
    "build:backend": "npm run build --workspace zapier-automation-backend",
    "build": "npm run build:backend && npm run build:frontend",
    "test": "npm test --workspaces"
  },
  "workspaces": [
    "src/zapier-automation-frontend",
    "src/zapier-automation-backend"
  ],
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
